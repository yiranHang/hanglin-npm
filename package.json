{
  "name": "hanglin-npm",
  "version": "1.0.0",
  "description": "Hanglin 组件库 Monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "build:watch": "pnpm -r run build:watch",
    "dev": "pnpm -r run dev",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "lint:lint-staged": "lint-staged",
    "format": "prettier --write packages/**/*.{ts,tsx,json,md}",
    "test": "pnpm -r run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "check-registry": "node scripts/check-registry.js",
    "pre-release": "pnpm check-registry && pnpm build",
    "release": "pnpm pre-release && changeset publish"
  },
  "keywords": [
    "hanglin",
    "components",
    "ui",
    "typescript"
  ],
  "author": "Hanglin <hanglin@example.com>",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.0",
    "@hanglin/utils": "workspace:*",
    "@types/node": "^22.15.34",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-vue": "^10.2.0",
    "globals": "^16.2.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3",
    "vue-eslint-parser": "^10.1.4"
  },
  "publishConfig": {
    "registry": "http://hanglin.site:4873/",
    "access": "restricted"
  }
}
